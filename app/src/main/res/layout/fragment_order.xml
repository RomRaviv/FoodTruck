<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderDetailsFragment"
    android:background="@color/yellow">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/table_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="Date: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:id="@+id/txt_order_date"
                    android:layout_weight="8"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="05/06/2022 ; 19:45"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="Order No."
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:id="@+id/txt_order_num"
                    android:layout_weight="8"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="84"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="Customer: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:id="@+id/txt_customer_name"
                    android:layout_weight="8"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="Mike"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:layout_weight="1"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="Total: "
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>

                <TextView
                    android:id="@+id/txt_order_total_price"
                    android:layout_weight="8"
                    android:background="@drawable/back_rectangle"
                    android:padding="5dp"
                    android:text="120.0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="28dp"/>
            </TableRow>


        </TableLayout>
        <LinearLayout
            android:id="@+id/linear_my_order_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/table_details">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="5dp"
                android:text="No."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="5dp"
                android:text="Item"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="5dp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="5dp"
                android:text="Item Price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_rectangle"
                android:padding="5dp"
                android:text="Total"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear_my_order_first_row">

            <LinearLayout
                android:id="@+id/linear_order_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>